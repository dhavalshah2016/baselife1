<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blue_fade"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtfgpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:gravity="center_horizontal"
            android:text="@string/activity_login_text_forgot_password"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/txtcreateacc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:gravity="center_horizontal"
            android:text="@string/activity_login_text_create_an_account"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/txtskip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:gravity="center_horizontal"
            android:text="@string/activity_login_text_skip_for_now"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/centerlayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_screen_username_password_height"
            android:layout_marginLeft="@dimen/login_form_left_right_margin"

            android:layout_marginRight="@dimen/login_form_left_right_margin"
            android:background="@mipmap/loginformbg"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/username_hint"
                android:inputType="textShortMessage"
                android:maxLength="23"

                android:padding="@dimen/login_username_password_text_padding"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="normal"

                />

            <EditText
                android:id="@+id/edtpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@android:color/transparent"
                android:gravity="bottom|center_horizontal"
                android:hint="@string/password_hint"
                android:inputType="textWebPassword"
                android:maxLength="23"
                android:padding="@dimen/login_username_password_text_padding"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:gravity="center_horizontal"
            android:text="@string/activity_login_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/centerlayout">
        <TextView
            android:id="@+id/txtbaselife"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            android:gravity="center_horizontal"
            android:text="Baselife"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_text_size"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</RelativeLayout>
