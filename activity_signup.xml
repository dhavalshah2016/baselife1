<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/blue_fade"
    tools:context="com.example.baselife.SignupActivity">

    <TextView
        android:id="@+id/txtcancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/txtcreateaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtcancel"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:text="Create an account"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_text_size" />

    <LinearLayout
        android:id="@+id/signuplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtcreateaccount"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/signup_screen_username_password_height"
            android:layout_marginLeft="@dimen/signup_form_left_right_margin"

            android:layout_marginRight="@dimen/signup_form_left_right_margin"
            android:background="@mipmap/signupform"
            android:gravity="left"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/signup_username_password_text_leftmargin"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:hint="@string/username_hint"
                android:inputType="textShortMessage"
                android:maxLength="23"
                android:padding="@dimen/signup_username_password_text_padding"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="normal"

                />

            <EditText
                android:id="@+id/edtemailaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/signup_username_password_text_leftmargin"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:hint="@string/emailaddress_hint"
                android:inputType="textEmailAddress"
                android:maxLength="23"
                android:padding="@dimen/signup_username_password_text_padding"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="normal"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/edtrank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/signup_username_password_text_leftmargin"
                    android:layout_weight="0.21"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:hint="@string/rank_hint"
                    android:inputType="textShortMessage"
                    android:maxLength="23"
                    android:padding="@dimen/signup_username_password_text_padding"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="normal"

                    />

                <EditText
                    android:id="@+id/edtfirstname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.32"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:hint="@string/firstname_hint"
                    android:inputType="textShortMessage"
                    android:maxLength="23"

                    android:padding="@dimen/signup_username_password_text_padding"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="normal"

                    />

                <EditText
                    android:id="@+id/edtlastname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="0.32"
                    android:background="@android:color/transparent"
                    android:gravity="left"
                    android:hint="@string/lastname_hint"
                    android:inputType="textShortMessage"
                    android:maxLength="23"

                    android:padding="@dimen/signup_username_password_text_padding"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/normal_text_size"
                    android:textStyle="normal"

                    />
            </LinearLayout>

            <EditText
                android:id="@+id/edtpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="@dimen/signup_username_password_text_leftmargin"
                android:background="@android:color/transparent"
                android:gravity="bottom|left"
                android:hint="@string/password_hint"
                android:inputType="textWebPassword"
                android:maxLength="23"
                android:padding="@dimen/login_username_password_text_padding"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtchoosephoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="@string/choosephoto_label"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:id="@+id/ivuserimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtchoosephoto"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:src="@drawable/circledmale" />

        <TextView
            android:id="@+id/txtnextstep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:text="Next step..."
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtagreecondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/signup_form_left_right_margin"
        android:layout_marginRight="@dimen/signup_form_left_right_margin"

        android:gravity="center_horizontal"
        android:text="@string/agreetext"
        android:textSize="@dimen/normal_text_size" />
</RelativeLayout>
